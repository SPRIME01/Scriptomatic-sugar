<?xml version="1.0"?>
<action-recipes>
	
	<!--
	This is an example action. See this for documentation on this XML:
	
	http://wiki.macrabbit.com/index/ActionXML/
	-->
	<action id="com.onecrayon.sugar.scriptomatic.helloWorld" category="category.id.would.go.here">
		<!-- Required -->
		<class>OCActOnFileWithScript</class>
		<!--
		Technically, we recommend using Localizable.strings instead of <title>:
		
		http://wiki.macrabbit.com/index/Localizable.strings/
		-->
		<title>AppleScript Hello World</title>
		<setup>
			<!-- Required; path to your AppleScript from the root of the Sugar -->
			<script-path>AppleScripts/HelloWorld.scpt</script-path>
			<!-- Accepts "true" or "false"; defaults to "false" -->
			<allow-multiple-files>false</allow-multiple-files>
		</setup>
	</action>
	
</action-recipes>