<?xml version="1.0"?>
<action-recipes>
	
	<!--
	This is an example action. See this for documentation on this XML:
	
	http://wiki.macrabbit.com/index/ActionXML/
	-->
	<action id="com.onecrayon.sugar.ExampleScripts.exampleFileAction" category="category.id.would.go.here">
		<!-- Required -->
		<class>OCActOnFileWithScript</class>
		<!--
		Technically, we recommend using Localizable.strings instead of <title>:
		
		http://wiki.macrabbit.com/index/Localizable.strings/
		-->
		<title>AppleScript File Example</title>
		<setup>
			<!-- Required; path to your AppleScript from the root of your Sugar -->
			<script-path>AppleScripts/HelloWorld.scpt</script-path>
			<!-- Both accept "true" or "false" and default to "false" -->
			<allow-multiple-selections>false</allow-multiple-selections>
			<allow-empty-selection>true</allow-empty-selection>
		</setup>
	</action>
	
</action-recipes>